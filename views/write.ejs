<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todolist-write</title>
    <link rel='stylesheet' href='/css/style.css' />
    <link rel='stylesheet' href='/css/index.css' />
  </head>
  <body>
    <header>
      <div class="header-title">Todolist</div>

      <nav>
        <ul class="header-nav">
          <li class="header-menu"><a href="/">Home</a></li>
          <li class="header-menu"><a href="/write">Write</a></li>
          <li class="header-menu"><a href="/list">list</a></li>
        </ul>
      </nav>
    </header>

    <div class="write-wrap">
      <form action="/add" method="post" id="todo-form" name="todo-form">
        <label for="todo">할 일</label>
        <input type="text" name="todo" id="todo" />
        <label for="date">날짜</label>
        <input type="date" name="date" id="date" />
        <button type="submit" id="submit">Submit</button>
      </form>
    </div>

    <script>
      const form = document.querySelector('form[name=todo-form]');

      form.addEventListener('submit', (e) => {
        if (document.querySelector('#todo').value == '') {
          alert('할 일을 기재해주세요.');
          e.preventDefault();
          return;
        } else if (document.querySelector('#date').value == '') {
          alert('날짜를 기재해주세요.');
          e.preventDefault();
          return;
        }
        form.submit();
      });
    </script>
  </body>
</html>
